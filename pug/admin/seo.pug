  body
    #app
      main
        tnb-admin
        lnb(menu-name="어드민/SEO설정")
        .main-inner
          .data-control
            button.is-right(@click="write") 저장
          .data-items
            .data-item.is-vertical(v-for="seoItem of Object.values(seo)")
              .item.wide {{ seoItem.name }}
              .input-items
                .input-item
                  .label URL
                  b-input(type="text" disabled :value="seoItem.url")
                .input-item
                  .label 타이틀 (title)
                  b-input(type="text" v-model="seoItem.title")
                .input-item
                  .label 설명 (description)
                  b-input(type="text" v-model="seoItem.description" placeholder="빈칸으로 두면 자동완성된 설명이 검색엔진에 나타납니다.")
    include common/tnb-admin.pug
    include common/lnb.pug
 
  script(type="text/javascript" src="/js/components.js")
  script(type='text/javascript').
    let api_key = "#{api_key}"
    var v = new Vue({
      el: '#app',
      components: {
      },
      data: {
        seo: {}
      },
      methods: {
        write: function () {
          http({uri:"SEO쓰기", method:"post", param: { api_key, tableName: 'TB_SEO', row: this.seo }, cb: (res) => {
            if(res.code === 0)
            {
              alert("수정되었습니다.")
            }
            else 
              alert("수정에 실패하였습니다.")
          } })

        }
      },
      computed: {
      },
      created()
      {
      },
      mounted()
      {
        http({uri:"SEO읽기", method:"patch", param: { api_key, tableName: 'TB_SEO', row: {} }, cb: (res) => {
          if(res.code === 0)
          {
            if(typeof res.row == 'object' && Object.keys(res.row).length > 0)
              this.seo = res.row
            else
            {
              this.seo = {
                '/': { name: '메인 페이지', url: '/', title: '차가운 기술로 따뜻한 세상을 만드는 🙂🙂 | AI 비전솔루션 매니스탈링스 Many Stallings Company', description: '' },
                '/research': { name: '연구', url: '/research', title: 'AI 비전솔루션 매니스탈링스 Many Stallings Company', description: '' },
                '/HR': { name: '채용', url: '/HR', title: '매니스탈링스와 함께 일할 수 있습니다.', description: '' },
                '/license': { name: '오픈소스 라이선스', url: '/license', title: 'Used Open Soruce License Notice 사용 오픈소스 라이선스 통지 | 매니스탈링스', description: '프론트엔드 측에 사용된 오픈소스 상세 내역을 고지합니다.' }
              }
            }
          }
        } })
      },
      beforeDestroy()
      {
      }

    })