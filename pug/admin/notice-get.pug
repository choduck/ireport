  body
    #app
      main
        tnb-admin
        lnb(menu-name="어드민/게시판")
        .main-inner
          .data-control
            button.is-left(@click="goBack") 이전 페이지
            button.is-left(@click="write(cmd)") {{cmd}}
          .notice
            .h-stack
              .label 카테고리
              b-input.flex-1(type="text" v-model="select[0]['카테고리']" disabled)
            .h-stack
              .label 번호/일시
              b-input.flex-1(type="text" :value="select[0]['NO'] + ' / ' + select[0]['일시']" disabled)
            .h-stack
              .label 국문제목
              b-input.flex-1(type="text" v-model="select[0]['국문제목']" placeholder="국문제목" :disabled="cmd == '수정'")
            .h-stack
              .label 국문내용
              b-input.flex-1(type="textarea" v-model="select[0]['국문내용']" placeholder="국문내용" :disabled="cmd == '수정'")
            .h-stack
              .label 영문제목
              b-input.flex-1(type="text" v-model="select[0]['영문제목']" placeholder="영문제목" :disabled="cmd == '수정'")
            .h-stack
              .label 영문내용
              b-input.flex-1(type="textarea" v-model="select[0]['영문내용']" placeholder="영문내용" :disabled="cmd == '수정'")
    include common/tnb-admin.pug
    include common/lnb.pug
          
 
  script(type="text/javascript" src="/js/components.js")
  script(type='text/javascript').
    let tableName = "#{tableName}"
    let noticeNo = "#{noticeNo}"
    var v = new Vue({
      el: '#app',
      components: {
      },
      data: {
        cmd: '수정',
        select: [{}]
      },
      methods: {
        write: function (cmd) {
          if(cmd == '수정')
          {
            this.cmd = '등록'
            return
          }
          else if(cmd == '등록') {
            if(!this.select) return
            if(this.select.length != 1) return
            http({uri:"게시판수정", method:"put", param: { tableName: tableName, datetime: this.select[0]['일시'], row: this.select[0] }, cb: (res) => {
              this.cmd = '수정'
              if(res.code === 0)
              {
                alert("수정되었습니다.")
              }
              else
                alert("수정에 실패하였습니다.")
            } })
          }
        },
        goBack: function () {
          history.go(-1)
        }
      },
      computed: {
      },
      created()
      {
      },
      mounted()
      {
        http({uri:"게시판검색", method:"patch", param: { tableName: tableName, option: {row: {NO: noticeNo}, condition: '같음'} }, cb: (res) => {
          if(res.code === 0)
          {
            if(!Array.isArray(res.data))
              this.select = []
            else
              this.select = res.data
            if(this.select.length > 0)
            {
            }
          }
        } })
      },
      beforeDestroy()
      {
      }

    })